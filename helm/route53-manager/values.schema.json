{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "codename": {
            "type": "string"
        },
        "groupID": {
            "type": "integer"
        },
        "image": {
            "type": "object",
            "properties": {
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "name": {
            "type": "string"
        },
        "namespace": {
            "type": "string"
        },
        "route53Manager": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            }
        },
        "secretYaml": {
            "type": "string"
        },
        "userID": {
            "type": "integer"
        },
        "global": {
            "type": "object",
            "properties": {
                "podSecurityStandards": {
                    "type": "object",
                    "properties": {
                        "enforced": {
                            "type": "boolean"
                        }
                    }
                }
            }
        }
    }
}
